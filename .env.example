# Discord MCP Server Configuration
# Copy this file to .env and fill in your values

# Required: Discord account token (use at your own risk - self-bots violate ToS)
DISCORD_TOKEN=your_discord_token_here

# Optional: Groq API key for AI-based hCaptcha solving
GROQ_API_KEY=your_groq_api_key_here

# Optional: Proxy for hCaptcha solving (format: user:pass@ip:port or ip:port)
CAPTCHA_PROXY=

# ===========================================
# Rate Limiting Configuration
# ===========================================
# Enable rate limiting to prevent account bans
RATE_LIMIT_ENABLED=false

# Maximum messages per minute
RATE_LIMIT_MESSAGES_PER_MINUTE=10

# Maximum messages per second
RATE_LIMIT_MESSAGES_PER_SECOND=1

# Maximum actions (joins, leaves, etc.) per minute
RATE_LIMIT_ACTIONS_PER_MINUTE=5

# Cooldown duration in seconds when rate limit is hit
RATE_LIMIT_COOLDOWN=60

# Whether to respect Discord's global rate limit
RATE_LIMIT_RESPECT_GLOBAL=true

# ===========================================
# Temp directory for hCaptcha solver
# ===========================================
TEMP_DIR=/tmp/hcaptcha
